{# app/Resources/views/login.html.twig #}
{% extends 'base.loggedIn.html.twig' %}

{% block title %}
    Give Review
{% endblock %}

{% block content %}
<h1>Give Review</h1>
	
	<p>		
                {% if TRAINNUMBER_INVALID is defined %}<div class="alert alert-danger" role="alert"><strong>Error!</strong> Train Number invalid. Please enter in a valid train number.</div>{% endif %}
		<form method = "post" action="/giveReview">
		  Train Number:<br>
                  <div class="form-group{% if TRAINNUMBER_INVALID is defined%} has-error{% endif %}">
		  <input type="text" name="trainNumberReview"><br><br>
		  Rating:
			<select name="rating">
				<option value="5">Very Good</option>
				<option value="4">Good</option>
				<option value="3">Neutral</option>
				<option value="2">Bad</option>
				<option value="1">Very Bad</option>
			</select> <br><br>
		  Comment:<br>
		  <input type="text" name="commentReview"><br>
		
			</p><br>
			<input type="submit" value="Submit">
                </div>
		</form>
<br>
<br>
	<br>

    <a href = "mainMenu">Back</a>
	
{% endblock %}
