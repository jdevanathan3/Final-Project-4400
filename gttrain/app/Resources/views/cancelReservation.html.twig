{# app/Resources/views/login.html.twig #}
{% extends 'base.loggedIn.html.twig' %}

{% block title %}
    Cancel Reservation
{% endblock %}

{% block content %}
     <h1>Cancel Reservation</h1>
	<p>
		<table style="width:100%">
		  <tr>
			<td>Train (Train Number)</td>
			<td>Time (Duration)</td> 
			<td>Departs From</td>
			<td>Arrives At</td>
			<td>Class</td>
			<td>Price</td>
			<td># of Baggage</td>
			<td>Passenger Name</td>
		  </tr>
	{% for row in tickets %}
		<tr>
				<td>Train {{ row['trainNumber'] }}<input hidden type="text" name="trainNumber" value="{{ row['trainNumber'] }}"></td>
				<td>Departs {{ row['date'] }}<br>{{ row['time'] }} <br> {{ row['duration'] }}</td>
				<td>{{ row['departsFrom'] }}</td>
				<td>{{ row['arrivesAt'] }}</td>
				<td>{{ row['class'] }}</td>
				<td>{{ row['price'] }}</td>
				<td>{{ row['bags'] }}</td>
				<td>{{ row['passenger'] }}</td>
		</tr>
	{% endfor %}
		</table>
	</p>
	<form action="confirmCancel" method="post" novalidate>
		<input hidden type="text" name="reservationId" value="{{ reservationId }}">
	<p>
		Total Cost of Reservation: {{ totalCost }}
		<input hidden type="text" name="totalCost" value="{{ totalCost }}">
		<br>
		Date of Cancellation: {{ currentDate }}
		<br>
		<input hidden type="text" name="refundAmount" value="{{ refundAmount }}">
		Amount to be Refunded: {{ refundAmount }}
		<br>
	</p>

		<button type="submit" class="btn btn-default">Submit</button >
	</form>
<br>
<br>
    <a href = "cancelReservationSearch">Back</a>
	
{% endblock %}
