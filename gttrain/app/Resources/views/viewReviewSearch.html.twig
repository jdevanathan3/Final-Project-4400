{# app/Resources/views/login.html.twig #}
{% extends 'base.loggedIn.html.twig' %}

{% block title %}
    View Review Search
{% endblock %}

{% block content %}
	<h1>View Review</h1>
	<p>
		{% if TRAINNUMBER_INVALID is defined %}
		<div class="alert alert-danger" role="alert">
			<strong>Error!</strong> Train Number invalid. Please enter in a valid train number.
		</div>{% endif %}

		<form method="post" action="/viewReviewSearchD">
			<div class="form-group{% if TRAINNUMBER_INVALID is defined%} has-error{% endif %}">
				 Train Number:
				 <input type="text" name="trainNumberReviewSearch">
				 <input type="submit" value="Submit">
			</div>
		</form>
	</p>
	
    <a href = "mainMenu">Back</a>

{% endblock %}