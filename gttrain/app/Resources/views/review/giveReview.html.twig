{% extends 'base/base.loggedIn.html.twig' %}

{% block title %}
	Give Review
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12"><h1>Give Review</h1></div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb">
				<li><a href="/user/dashboard">User</a></li>
				<li><a href="/review/search">Reviews</a></li>
				<li class="active">Give Review</li>
			</ol>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			{% if TRAINNUMBER_INVALID is defined %}<div class="alert alert-danger" role="alert"><strong>Error!</strong> Train Number invalid. Please enter in a valid train number.</div>{% endif %}
			<form method = "post" action="/review/give">
				<div class="form-group{% if TRAINNUMBER_INVALID is defined%} has-error{% endif %}">
					<input type="text" class="form-control" id="trainNumberReview" name="trainNumberReview" placeholder="Train Number">
				</div>
				<div class="form-group">
					<label>Rating</label>
					<select class="form-control" name="rating">
						<option value="5">Very Good</option>
						<option value="4">Good</option>
						<option value="3">Neutral</option>
						<option value="2">Bad</option>
						<option value="1">Very Bad</option>
					</select>
				</div>
				<div class="form-group">
					<textarea class="form-control" id="commentBox" name="commentReview" rows="3" placeholder="Enter comment here"></textarea>
				</div>
				<button type="submit" class="btn btn-default">Submit</button>
			</form>


		</div>
	</div>
{% endblock %}
