{% extends 'base/base.loggedIn.html.twig' %}

{% block title %}
	Search Reviews
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12"><h1>Search Reviews</h1></div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb">
				<li><a href="/user/dashboard">User</a></li>
				<li>Reviews</li>
				<li class="active">Search</li>
			</ol>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Search Trains</h3>
				</div>
				<div class="panel-body">
					{% if TRAINNUMBER_INVALID is defined %}<div class="alert alert-danger" role="alert"><strong>Error!</strong> Train Number invalid. Please enter in a valid train number.</div>{% endif %}
					<form method="post" action="/review/search">
					<div class="form-group {% if TRAINNUMBER_INVALID is defined%} has-error{% endif %}">
							<input type="text" class="form-control" id="trainNumber" name="trainNumberReviewSearch" placeholder="Train Number">
						</div>
						<button type="submit" class="btn btn-default">Submit</button>
					</form>
				</div>
			</div>


		</div>
	</div>
{% endblock %}