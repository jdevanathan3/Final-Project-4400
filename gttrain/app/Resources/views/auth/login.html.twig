{# app/Resources/views/login.html.twig #}
{% extends 'base/base.loggedOut.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Login</h3>
                </div>
                <div class="panel-body">
                    {% if LOGIN_FAILED is defined %}<div class="alert alert-danger" role="alert"><strong>Error!</strong> Login failed</div>{% endif %}
                    <form action="/login" method="post" novalidate>
                        <div class="form-group{% if USERNAME_EMPTY is defined or LOGIN_FAILED is defined%} has-error{% endif %}">
                            <input type="text" class="form-control" name="input_username" id="input_username" placeholder="username" {% if prev_username is defined %}value="{{ prev_username }}"{% endif %}>
                            {% if USERNAME_EMPTY is defined %}<span id="helpBlock1" class="help-block">Username is empty. Please enter a Username</span>{% endif %}
                            {% if LOGIN_FAILED is defined %}<span id="helpBlock1" class="help-block">Username or Password is incorrect</span>{% endif %}
                        </div>
                            <div class="form-group{% if PASSWORD_EMPTY is defined or LOGIN_FAILED is defined%} has-error{% endif %}">
                                <input type="password" class="form-control" name="input_password" id="input_password" placeholder="Password">
                                {% if PASSWORD_EMPTY is defined %}<span id="helpBlock6" class="help-block">Password is empty. Please enter a Password</span>{% endif %}
                                {% if LOGIN_FAILED is defined %}<span id="helpBlock1" class="help-block">Username or Password is incorrect</span>{% endif %}
                            </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">right side</div>
    </div>
{% endblock %}