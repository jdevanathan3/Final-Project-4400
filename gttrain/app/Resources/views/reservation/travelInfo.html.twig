{% extends 'base/base.loggedIn.html.twig' %}

{% block title %}
    Travel Extras & Passenger Info
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12"><h1>Travel Extras & Passenger Info</h1></div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>Reservation</li>
                <li><a href="/reservation/searchTrain">Search Train</a></li>
                <li><a href="/reservation/selectDeparture">Select Departure</a></li>
                <li class="active">Travel Info</li>
            </ol>
        </div>
    </div>
    <form action="/reservation/travelInfo" method="post" novalidate>
        <div class="row">
            <input hidden type="text" name="trainNumber" value="{{ inputs['trainNumber'] }}">
            <input hidden type="text" name="trainClass" value="{{ inputs['trainClass'] }}">
            <input hidden type="text" name="date" value="{{ inputs['date'] }}">
            <input hidden type="text" name="departStation" value="{{ inputs['departStation'] }}">
            <input hidden type="text" name="arriveStation" value="{{ inputs['arriveStation'] }}">
            <div class="col-md-8">
                <h3>Number of Baggage</h3>
            </div>
            <div class="col-md-4">
                <select name="baggage">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h4>Every passenger can bring up to 4 baggage. 2 free of charge, 2 for $30 per bag</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <h3>Passenger Name</h3>
            </div>
            <div class="col-md-4">
                <input type="text" name="passenger_name">
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
{% endblock %}