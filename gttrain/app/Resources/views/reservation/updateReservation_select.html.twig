{% extends 'base/base.loggedIn.html.twig' %}

{% block title %}
	Update Reservation
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12"><h1>Update Reservation {{ reservationID }}</h1></div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb">
				<li><a href="/user/dashboard">User</a></li>
				<li></li>Reservation</a></li>
				<li class="active">Update</li>
			</ol>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			{% if error == "selectError" %}<div class="alert alert-danger" role="alert"><strong>Error!</strong> You must select a ticket to edit</div>{% endif %}
			<form action="/reservation/select" method="post">
				<input type="hidden" name="reservationID" value="{{ reservationID }}">
				<table class="table table-bordered">
					<thead>
					<tr><th>Select</th><th>Train</th><th>Duration</th><th>Departs from</th><th>Arrives at</th><th>Class</th><th>Price</th><th># of Bags</th><th>Passenger name</th></tr>
					</thead>
					<tbody>
					{% for ticket in tickets %}
					<tr>
						<td><div class="radio"><label><input type="radio" name="trainNumberRadio" id="blankRadio1" value="{{ ticket.trainNumber }}"></label></div></td>
						<td>{{ ticket.trainNumber }}</td>
						<td>{{ ticket.duration }}</td>
						<td>{{ ticket.departsFrom }}</td>
						<td>{{ ticket.arrivesAt }}</td>
						<td>{{ ticket.class }}</td>
						<td>{{ ticket.price }}</td>
						<td>{{ ticket.bags }}</td>
						<td>{{ ticket.passenger }}</td>
					</tr>
					{% endfor %}
					</tbody>
				</table>
				<button type="submit" class="btn btn-default">Submit</button>
			</form>
		</div>
	</div>
{% endblock %}
