{% extends 'base/base.loggedIn.html.twig' %}

{% block title %}
	Select Departure
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12"><h1>Select Departure</h1></div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb">
				<li>Reservation</li>
				<li><a href="/reservation/searchTrain">Search Train</a></li>
				<li class="active">Select Departure</li>
			</ol>
		</div>
	</div>
	<form action="/reservation/selectDeparture" method="post" novalidate>
	<div class="row">
		<div class="col-md-8">
			<table class="table table-bordered">
				<thead>
				<tr><th>Train</th><th>Departure Time</th><th>Arrival Time</th><th>Duration</th><th>1st Class Price</th><th>2nd Class Price</th></tr>
				</thead>
				<tbody>
				{% for route in trains %}
					<tr>
						<td>{{ route[0] }}</td>
						<td>{{ route[2] }}</td>
						<td>{{ route[4] }}</td>
						<td>{{ route[5] }}</td>
						<td><label class="radio-inline"><input type="radio" name="input_trainRadio" id="inlineRadio1" value="{{ route[0] }}_1">{{ route[6] }}</label></td>
						<td><label class="radio-inline"><input type="radio" name="input_trainRadio" id="inlineRadio1" value="{{ route[0] }}_1">{{ route[7] }}</label></td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Info</h3>
				</div>
				<div class="panel-body">
					<p>Departs from: {{ inputs.departStation }}</p>
					<p>Arrives at: {{ inputs.arriveStation }}</p>
					<p>Date: {{ inputs.date }}</p>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<button type="submit" class="btn btn-default">Submit</button>
		</div>
	</div>
	</form>
{% endblock %}