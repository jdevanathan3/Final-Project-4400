{# app/Resources/views/login.html.twig #}
{% extends 'base.loggedIn.html.twig' %}

{% block title %}
     View Review
{% endblock %}

{% block content %}
	<h1>View Review</h1>
	<p>
		<table class="table table-bordered">
		  <thead>
			<tr><th>Rating</th><th>Comment</th></tr>
		</thead>
		<tbody>
			{% for review in reviews %}
				<tr><td>{{ review['Rating'] }}</td><td>{{ review['Comment'] }}</td></tr>
			{% endfor %}
		</tbody>
		</table>
	</p>
	
    <a href = "mainMenu">Back to Choose Functionality</a>

{% endblock %}